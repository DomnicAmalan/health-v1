{
  "name": "lazarus-life-monorepo",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "workspaces": ["packages/apps/*", "packages/libs/*"],
  "scripts": {
    "dev": "bun --filter='*' run dev",
    "dev:client": "bun --filter=lazarus-life-hims run dev",
    "dev:admin": "bun --filter=lazarus-life-admin run dev",
    "dev:vault": "bun --filter=lazarus-life-vault run dev",
    "dev:all": "bun run --parallel dev:client dev:admin dev:vault",
    "build": "bun run build:libs && bun --filter='packages/apps/*' run build",
    "build:libs": "bun --filter=@lazarus-life/shared run build && bun --filter=@lazarus-life/ui-components run build",
    "build:client": "bun run build:libs && bun --filter=lazarus-life-hims run build",
    "build:admin": "bun run build:libs && bun --filter=lazarus-life-admin run build",
    "build:vault": "bun run build:libs && bun --filter=lazarus-life-vault run build",
    "typecheck": "bun --filter='*' run typecheck",
    "typecheck:strict": "tsc -p tsconfig.strict.json --noEmit",
    "lint": "biome check --max-diagnostics=200 .",
    "lint:fix": "biome check --write --max-diagnostics=200 .",
    "lint:fix:unsafe": "biome check --write --unsafe --max-diagnostics=200 .",
    "lint:oxlint": "oxlint .",
    "lint:all": "bun run lint:oxlint && bun run lint",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "format:oxfmt": "oxfmt --check .",
    "format:oxfmt:fix": "oxfmt --write .",
    "test": "bun --filter='*' run test",
    "test:run": "bun --filter='*' run test:run",
    "test:coverage": "bun --filter='*' run test:coverage",
    "clean": "bun --filter='*' run clean && rm -rf node_modules",
    "prepare": "husky",
    "commit": "git-cz",
    "audit": "bun audit",
    "security:semgrep": "semgrep --config .semgrep.yml",
    "security:secrets": "gitleaks detect --source . --verbose"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "bun@1.3.4",
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-router": "^1.141.2",
    "@tanstack/react-router-devtools": "^1.141.2",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "immer": "^11.0.1",
    "lucide-react": "^0.555.0",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.20.0",
    "oxlint": "^1.33.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": ["biome check --write"]
  }
}
