{
  "name": "lazarus-life-monorepo",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "workspaces": ["packages/apps/*", "packages/libs/*"],
  "scripts": {
    "// === Development Commands ===": "",
    "dev": "node scripts/dev-interactive.js",
    "dev:vault": "bun run build:libs && bun run --parallel dev:libs vault:only",
    "dev:admin": "bun run build:libs && bun run --parallel dev:libs admin:only",
    "dev:client": "bun run build:libs && bun run --parallel dev:libs client:only",
    "dev:all": "bun run build:libs && bun run --parallel dev:libs dev:apps",
    "dev:libs": "bun run --parallel dev:shared dev:components",
    "dev:shared": "bun --filter=@lazarus-life/shared run dev",
    "dev:components": "bun --filter=@lazarus-life/ui-components run dev",
    "dev:apps": "bun --filter='packages/apps/*' run dev",
    "vault:only": "bun --filter=lazarus-life-vault run dev",
    "admin:only": "bun --filter=lazarus-life-admin run dev",
    "client:only": "bun --filter=lazarus-life-hims run dev",

    "// === Testing Commands ===": "",
    "test": "bun run test:unit && cd ../backend && cargo test --workspace",
    "test:all": "bun run test:unit && bun run test:backend && bun run test:e2e",
    "test:unit": "bun --filter='*' run test",
    "test:backend": "cd ../backend && cargo test --workspace",
    "test:e2e": "bun --filter=lazarus-life-vault run test:e2e",
    "test:e2e:ui": "bun --filter=lazarus-life-vault run test:e2e:ui",
    "test:watch": "bun --filter='*' run test --watch",
    "test:coverage": "bun --filter='*' run test:coverage",
    "test:run": "bun --filter='*' run test:run",

    "// === Build Commands ===": "",
    "build": "bun run build:libs && bun run build:apps",
    "build:backend": "cd ../backend && cargo build --release --workspace",
    "build:frontend": "bun run build:libs && bun run build:apps",
    "build:libs": "bun --filter=@lazarus-life/shared run build && bun --filter=@lazarus-life/ui-components run build",
    "build:apps": "bun --filter='packages/apps/*' run build",
    "build:vault": "bun run build:libs && bun --filter=lazarus-life-vault run build",
    "build:admin": "bun run build:libs && bun --filter=lazarus-life-admin run build",
    "build:client": "bun run build:libs && bun --filter=lazarus-life-hims run build",
    "build:desktop": "bun run build:libs && bun --filter='packages/apps/*' run tauri build",
    "build:release": "bun run build:backend && bun run build:frontend",
    "rebuild:libs": "bun --filter='packages/libs/*' run clean && bun run build:libs",

    "// === Docker Commands ===": "",
    "docker:dev": "docker-compose -f ../docker-compose.dev.yml up -d --build",
    "docker:dev:down": "docker-compose -f ../docker-compose.dev.yml down",
    "docker:dev:logs": "docker-compose -f ../docker-compose.dev.yml logs -f",
    "docker:prod": "docker-compose -f ../docker-compose.yml up -d --build",
    "docker:prod:down": "docker-compose -f ../docker-compose.yml down",
    "docker:test": "docker-compose -f ../docker-compose.test.yml up -d --build",
    "docker:test:down": "docker-compose -f ../docker-compose.test.yml down",
    "docker:clean": "docker system prune -f",

    "// === Database Commands ===": "",
    "db:migrate": "cd ../backend && sqlx migrate run",
    "db:migrate:test": "cd ../backend && DATABASE_URL='postgresql://test_user:test_password@localhost:5433/vault_test_db' sqlx migrate run",
    "db:reset": "cd ../backend && sqlx database drop -y && sqlx database create && sqlx migrate run",
    "db:reset:test": "cd ../backend && DATABASE_URL='postgresql://test_user:test_password@localhost:5433/vault_test_db' sqlx database drop -y && sqlx database create && sqlx migrate run",
    "db:seed": "cd ../backend && cargo run --bin seed",

    "// === Linting & Quality Commands ===": "",
    "lint": "bun run lint:frontend && bun run lint:backend",
    "lint:fix": "bun run lint:frontend:fix && bun run lint:backend:fix",
    "lint:frontend": "biome check --max-diagnostics=200 .",
    "lint:frontend:fix": "biome check --write --max-diagnostics=200 .",
    "lint:frontend:unsafe": "biome check --write --unsafe --max-diagnostics=200 .",
    "lint:backend": "cd ../backend && cargo clippy --workspace -- -D warnings",
    "lint:backend:fix": "cd ../backend && cargo fmt --all",
    "lint:oxlint": "oxlint .",
    "lint:all": "bun run lint:oxlint && bun run lint:frontend && bun run lint:backend",

    "// === Check Commands ===": "",
    "check": "bun run lint && bun run check:types && bun run test:unit",
    "check:types": "bun --filter='packages/*' run typecheck",
    "check:strict": "cd .. && make strict",
    "typecheck": "bun --filter='*' run typecheck",
    "typecheck:strict": "tsc -p tsconfig.strict.json --noEmit",

    "// === Format Commands ===": "",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "format:oxfmt": "oxfmt --check .",
    "format:oxfmt:fix": "oxfmt --write .",

    "// === Clean Commands ===": "",
    "clean": "bun run clean:node && bun run clean:cargo",
    "clean:all": "bun run clean && bun run docker:clean",
    "clean:node": "bun --filter='*' run clean && rm -rf node_modules",
    "clean:cargo": "cd ../backend && cargo clean",

    "// === Utility Commands ===": "",
    "prepare": "husky",
    "commit": "git-cz",
    "audit": "bun audit",
    "security:semgrep": "semgrep --config .semgrep.yml",
    "security:secrets": "gitleaks detect --source . --verbose"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "bun@1.3.4",
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-router": "^1.141.2",
    "@tanstack/react-router-devtools": "^1.141.2",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "immer": "^11.0.1",
    "lucide-react": "^0.555.0",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^20.19.27",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.11.0",
    "oxlint": "^1.33.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": ["biome check --write"]
  }
}
