{
  "name": "lazarus-life-monorepo",
  "version": "1.1.0",
  "private": true,
  "workspaces": [
    "packages/apps/*",
    "packages/libs/*"
  ],
  "scripts": {
    "dev": "bun --filter='*' run dev",
    "dev:client": "bun --filter=lazarus-life-hims run dev",
    "dev:admin": "bun --filter=lazarus-life-admin run dev",
    "dev:vault": "bun --filter=lazarus-life-vault run dev",
    "dev:all": "bun run --parallel dev:client dev:admin dev:vault",
    "build": "bun run build:libs && bun --filter='apps/*' run build",
    "build:libs": "bun --filter=@lazarus-life/shared run build && bun --filter=@lazarus-life/ui-components run build",
    "build:client": "bun run build:libs && bun --filter=lazarus-life-hims run build",
    "build:admin": "bun run build:libs && bun --filter=lazarus-life-admin run build",
    "build:vault": "bun run build:libs && bun --filter=lazarus-life-vault run build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "bun --filter='*' run test",
    "clean": "bun --filter='*' run clean",
    "audit": "bun audit",
    "security:semgrep": "semgrep --config .semgrep.yml",
    "security:secrets": "gitleaks detect --source . --verbose"
  },
  "packageManager": "bun@1.3.4",
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-router": "^1.141.2",
    "@tanstack/react-router-devtools": "^1.141.2",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "immer": "^11.0.1",
    "lucide-react": "^0.555.0",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^20.19.27",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "oxlint": "^1.33.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.7"
  }
}
