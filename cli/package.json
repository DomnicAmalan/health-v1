{
  "name": "lazarus-life-monorepo",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "workspaces": ["packages/apps/*", "packages/libs/*"],
  "scripts": {
    "// === Development Commands ===": "",
    "dev": "node scripts/dev-interactive.js",
    "dev:vault": "bun run build:libs && bun --filter=lazarus-life-vault run dev",
    "dev:admin": "bun run build:libs && bun --filter=lazarus-life-admin run dev",
    "dev:client": "bun run build:libs && bun --filter=lazarus-life-hims run dev",
    "dev:all": "echo '⚠️  Use make dev-vault, make dev-admin, or make dev-client to run individual apps'",
    "dev:libs": "bun --filter=@lazarus-life/shared --filter=@lazarus-life/ui-components run dev",
    "dev:shared": "bun --filter=@lazarus-life/shared run dev",
    "dev:components": "bun --filter=@lazarus-life/ui-components run dev",
    "// === Testing Commands (UI only) ===": "",
    "test": "bun --filter='*' run test",
    "test:unit": "bun --filter='*' run test",
    "test:e2e": "bun --filter=lazarus-life-vault run test:e2e",
    "test:e2e:ui": "bun --filter=lazarus-life-vault run test:e2e:ui",
    "test:watch": "bun --filter='*' run test --watch",
    "test:coverage": "bun --filter='*' run test:coverage",
    "// === Build Commands (UI only) ===": "",
    "build": "bun run build:libs && bun run build:apps",
    "build:libs": "bun --filter=@lazarus-life/shared run build && bun --filter=@lazarus-life/ui-components run build",
    "build:apps": "bun --filter='packages/apps/*' run build",
    "build:vault": "bun run build:libs && bun --filter=lazarus-life-vault run build",
    "build:admin": "bun run build:libs && bun --filter=lazarus-life-admin run build",
    "build:client": "bun run build:libs && bun --filter=lazarus-life-hims run build",
    "build:desktop": "bun run build:libs && bun --filter='packages/apps/*' run tauri build",
    "rebuild:libs": "bun --filter='packages/libs/*' run clean && bun run build:libs",
    "// === Linting & Quality Commands (UI only) ===": "",
    "lint": "biome check --max-diagnostics=200 .",
    "lint:fix": "biome check --write --max-diagnostics=200 .",
    "lint:unsafe": "biome check --write --unsafe --max-diagnostics=200 .",
    "lint:oxlint": "oxlint .",
    "// === Check Commands (UI only) ===": "",
    "check": "bun run lint && bun run typecheck && bun run test",
    "check:types": "bun --filter='packages/*' run typecheck",
    "typecheck": "bun --filter='*' run typecheck",
    "typecheck:strict": "tsc -p tsconfig.strict.json --noEmit",
    "// === Format Commands ===": "",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "format:oxfmt": "oxfmt --check .",
    "format:oxfmt:fix": "oxfmt --write .",
    "// === Clean Commands (UI only) ===": "",
    "clean": "bun --filter='*' run clean && rm -rf node_modules",
    "clean:cache": "rm -rf node_modules/.cache packages/*/dist packages/*/.turbo",
    "// === Utility Commands ===": "",
    "prepare": "husky",
    "commit": "git-cz",
    "audit": "bun audit",
    "security:semgrep": "semgrep --config .semgrep.yml",
    "security:secrets": "gitleaks detect --source . --verbose"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "packageManager": "bun@1.3.4",
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-router": "^1.141.2",
    "@tanstack/react-router-devtools": "^1.141.2",
    "autoprefixer": "^10.4.22",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "immer": "^11.0.1",
    "lucide-react": "^0.563.0",
    "postcss": "^8.5.6",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "recharts": "^3.7.0",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.18",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/cli": "^2.9.6",
    "@types/node": "^20.19.27",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxfmt": "^0.11.0",
    "oxlint": "^1.33.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vite": "^7.2.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": ["biome check --write"]
  }
}
