{
  "name": "health-v1-cli",
  "version": "1.0.0",
  "private": true,
  "workspaces": ["packages/apps/*", "packages/libs/*"],
  "scripts": {
    "dev": "bun --filter='*' run dev",
    "dev:client": "bun --filter=client-app run dev",
    "dev:admin": "bun --filter=admin-app run dev",
    "dev:all": "bun run --parallel dev:client dev:admin",
    "build": "bun --filter='*' run build",
    "build:client": "bun --filter=client-app run build",
    "build:admin": "bun --filter=admin-app run build",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "bun --filter='*' run test",
    "clean": "bun --filter='*' run clean",
    "audit": "bun audit",
    "security:semgrep": "semgrep --config .semgrep.yml",
    "security:secrets": "gitleaks detect --source . --verbose"
  },
  "packageManager": "bun@1.1.0"
}
