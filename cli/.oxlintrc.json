{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "plugins": [
    "react",
    "typescript",
    "import"
  ],
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "no-unused-vars": "warn",
    "typescript/no-explicit-any": "warn",
    "prefer-const": "error"
  },
  "overrides": [
    {
      "files": [
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
      ],
      "rules": {
        "typescript/no-explicit-any": "allow"
      }
    }
  ],
  "ignorePatterns": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "target/**",
    "**/target/**",
    "**/src-tauri/target/**",
    "**/src-tauri/gen/**",
    "**/*.tsbuildinfo",
    "**/.tanstack/**",
    "**/.vite/**",
    "**/coverage/**",
    "**/playwright-report/**",
    "**/test-results/**",
    "**/.cache/**",
    "**/bun.lockb",
    "**/Cargo.lock",
    "**/package-lock.json",
    "**/yarn.lock",
    "**/pnpm-lock.yaml",
    "**/routeTree.gen.ts"
  ]
}
