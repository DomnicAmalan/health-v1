/**
 * IPD Page
 * Inpatient Department management with admissions and discharges
 */

import { PERMISSIONS } from "@lazarus-life/shared/constants/permissions";
import { useTranslation } from "@lazarus-life/shared/i18n";
import {
  Box,
  Badge,
  Button,
  Card,
  CardContent,
  CardDescription,
  CardHeader,
  CardTitle,
  Dialog,
  DialogContent,
  DialogHeader,
  DialogTitle,
  Flex,
  Tabs,
  TabsContent,
  TabsList,
  TabsTrigger,
} from "@lazarus-life/ui-components";
import { createFileRoute } from "@tanstack/react-router";
import {
  Activity,
  Bed,
  ClipboardList,
  LogOut,
  Plus,
  Settings,
  UserPlus,
  Users,
} from "lucide-react";
import { useState, useCallback } from "react";
import { ProtectedRoute } from "@/components/security/ProtectedRoute";
import { AdmissionForm, DepartmentStats } from "@/components/departments";
import {
  useIPDDashboard,
  useActiveAdmissions,
  usePendingDischarges,
} from "@/hooks/api/departments";

export const Route = createFileRoute("/ipd")({
  component: IPDComponent,
});

function IPDComponent() {
  return (
    <ProtectedRoute
      requiredPermission={PERMISSIONS.DEPARTMENTS.IPD_VIEW}
      resource="ipd"
    >
      <IPDPageInner />
    </ProtectedRoute>
  );
}

function IPDPageInner() {
  const { t } = useTranslation();

  const [activeTab, setActiveTab] = useState("admissions");
  const [showNewAdmission, setShowNewAdmission] = useState(false);

  // Get dashboard stats
  const { data: dashboardData } = useIPDDashboard();
  const { data: activeData } = useActiveAdmissions();
  const { data: pendingDischarges } = usePendingDischarges();

  const currentAdmissions = dashboardData?.currentAdmissions ?? 0;
  const pendingDischargeCount = pendingDischarges?.length ?? 0;
  const activeCount = activeData?.total ?? 0;

  const handleAdmissionSuccess = useCallback((admissionId: string) => {
    setShowNewAdmission(false);
    setActiveTab("admissions");
  }, []);

  return (
    <Box className="space-y-6">
      {/* Header */}
      <Flex align="center" justify="between">
        <Box>
          <h1 className="text-3xl font-bold">
            {t("ipd.title", "Inpatient Department")}
          </h1>
          <p className="text-muted-foreground mt-2">
            {t("ipd.subtitle", "Manage patient admissions, transfers, and discharges")}
          </p>
        </Box>
        <Flex gap="sm">
          <Button variant="outline">
            <LogOut className="h-4 w-4 mr-2" />
            Discharge Patient
          </Button>
          <Button onClick={() => setShowNewAdmission(true)}>
            <Plus className="h-4 w-4 mr-2" />
            New Admission
          </Button>
        </Flex>
      </Flex>

      {/* Quick Stats */}
      <Box className="grid grid-cols-1 md:grid-cols-4 gap-4">
        <Card
          className="cursor-pointer hover:bg-accent/50 transition-colors"
          onClick={() => setActiveTab("admissions")}
        >
          <CardContent className="pt-6">
            <Flex align="center" gap="md">
              <Box className="p-3 rounded-full bg-blue-100 dark:bg-blue-900/30">
                <Users className="h-6 w-6 text-blue-600" />
              </Box>
              <Box>
                <p className="text-2xl font-bold">{currentAdmissions}</p>
                <p className="text-sm text-muted-foreground">Current Patients</p>
              </Box>
            </Flex>
          </CardContent>
        </Card>

        <Card
          className="cursor-pointer hover:bg-accent/50 transition-colors"
          onClick={() => setActiveTab("admissions")}
        >
          <CardContent className="pt-6">
            <Flex align="center" gap="md">
              <Box className="p-3 rounded-full bg-green-100 dark:bg-green-900/30">
                <UserPlus className="h-6 w-6 text-green-600" />
              </Box>
              <Box>
                <p className="text-2xl font-bold">
                  {dashboardData?.todayAdmissions ?? 0}
                </p>
                <p className="text-sm text-muted-foreground">Today's Admissions</p>
              </Box>
            </Flex>
          </CardContent>
        </Card>

        <Card
          className="cursor-pointer hover:bg-accent/50 transition-colors"
          onClick={() => setActiveTab("discharges")}
        >
          <CardContent className="pt-6">
            <Flex align="center" gap="md">
              <Box className="p-3 rounded-full bg-yellow-100 dark:bg-yellow-900/30">
                <LogOut className="h-6 w-6 text-yellow-600" />
              </Box>
              <Box>
                <p className="text-2xl font-bold">{pendingDischargeCount}</p>
                <p className="text-sm text-muted-foreground">Pending Discharges</p>
              </Box>
            </Flex>
          </CardContent>
        </Card>

        <Card
          className="cursor-pointer hover:bg-accent/50 transition-colors"
          onClick={() => setActiveTab("dashboard")}
        >
          <CardContent className="pt-6">
            <Flex align="center" gap="md">
              <Box className="p-3 rounded-full bg-purple-100 dark:bg-purple-900/30">
                <Activity className="h-6 w-6 text-purple-600" />
              </Box>
              <Box>
                <p className="text-2xl font-bold">
                  {dashboardData?.averageLOS?.toFixed(1) ?? 0} days
                </p>
                <p className="text-sm text-muted-foreground">Avg Length of Stay</p>
              </Box>
            </Flex>
          </CardContent>
        </Card>
      </Box>

      {/* Main Tabs */}
      <Tabs value={activeTab} onValueChange={setActiveTab}>
        <TabsList>
          <TabsTrigger value="admissions" className="gap-2">
            <Bed className="h-4 w-4" />
            Admissions
            {activeCount > 0 && (
              <Badge variant="secondary">{activeCount}</Badge>
            )}
          </TabsTrigger>
          <TabsTrigger value="discharges" className="gap-2">
            <LogOut className="h-4 w-4" />
            Discharges
            {pendingDischargeCount > 0 && (
              <Badge variant="secondary">{pendingDischargeCount}</Badge>
            )}
          </TabsTrigger>
          <TabsTrigger value="census" className="gap-2">
            <ClipboardList className="h-4 w-4" />
            Census
          </TabsTrigger>
          <TabsTrigger value="dashboard" className="gap-2">
            <Activity className="h-4 w-4" />
            Dashboard
          </TabsTrigger>
          <TabsTrigger value="settings" className="gap-2">
            <Settings className="h-4 w-4" />
            Settings
          </TabsTrigger>
        </TabsList>

        <Box className="mt-4">
          <TabsContent value="admissions">
            <Card>
              <CardHeader>
                <CardTitle className="flex items-center gap-2">
                  <Bed className="h-5 w-5" />
                  Active Admissions
                </CardTitle>
                <CardDescription>
                  View and manage current inpatient admissions
                </CardDescription>
              </CardHeader>
              <CardContent>
                <Box className="text-center text-muted-foreground py-8">
                  <Users className="h-8 w-8 mx-auto mb-2 opacity-50" />
                  <p>Admission list coming soon</p>
                </Box>
              </CardContent>
            </Card>
          </TabsContent>

          <TabsContent value="discharges">
            <Card>
              <CardHeader>
                <CardTitle className="flex items-center gap-2">
                  <LogOut className="h-5 w-5" />
                  Pending Discharges
                </CardTitle>
                <CardDescription>
                  Patients awaiting discharge clearance
                </CardDescription>
              </CardHeader>
              <CardContent>
                <Box className="text-center text-muted-foreground py-8">
                  <LogOut className="h-8 w-8 mx-auto mb-2 opacity-50" />
                  <p>Discharge list coming soon</p>
                </Box>
              </CardContent>
            </Card>
          </TabsContent>

          <TabsContent value="census">
            <Card>
              <CardHeader>
                <CardTitle className="flex items-center gap-2">
                  <ClipboardList className="h-5 w-5" />
                  IPD Census
                </CardTitle>
                <CardDescription>
                  Current patient census by ward
                </CardDescription>
              </CardHeader>
              <CardContent>
                <Box className="text-center text-muted-foreground py-8">
                  <ClipboardList className="h-8 w-8 mx-auto mb-2 opacity-50" />
                  <p>Census report coming soon</p>
                </Box>
              </CardContent>
            </Card>
          </TabsContent>

          <TabsContent value="dashboard">
            <DepartmentStats />
          </TabsContent>

          <TabsContent value="settings">
            <Card>
              <CardHeader>
                <CardTitle className="flex items-center gap-2">
                  <Settings className="h-5 w-5" />
                  IPD Settings
                </CardTitle>
                <CardDescription>
                  Configure admission rules, discharge workflows, and notifications
                </CardDescription>
              </CardHeader>
              <CardContent>
                <Box className="text-center text-muted-foreground py-8">
                  <Settings className="h-8 w-8 mx-auto mb-2 opacity-50" />
                  <p>IPD settings coming soon</p>
                </Box>
              </CardContent>
            </Card>
          </TabsContent>
        </Box>
      </Tabs>

      {/* New Admission Dialog */}
      <Dialog open={showNewAdmission} onOpenChange={setShowNewAdmission}>
        <DialogContent className="max-w-3xl max-h-[90vh] overflow-y-auto">
          <DialogHeader>
            <DialogTitle>New Patient Admission</DialogTitle>
          </DialogHeader>
          <AdmissionForm
            onSuccess={handleAdmissionSuccess}
            onCancel={() => setShowNewAdmission(false)}
          />
        </DialogContent>
      </Dialog>
    </Box>
  );
}
