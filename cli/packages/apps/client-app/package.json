{
  "name": "client-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "bun@1.1.0",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "dev": "vite",
    "dev:web": "vite",
    "build": "tsc && vite build",
    "build:web": "tsc && vite build",
    "build:desktop": "tsc && vite build --mode desktop",
    "lint": "biome check . && node scripts/check-file-sizes.js",
    "lint:fix": "biome check --write .",
    "lint:fix:unsafe": "biome check --write --unsafe .",
    "format": "biome format --write .",
    "check:size": "node scripts/check-file-sizes.js",
    "preview": "vite preview",
    "preview:web": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:mobile": "playwright test --grep @mobile",
    "test:e2e:api": "playwright test --grep @api",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "prepare": "husky",
    "commit": "git-cz",
    "release": "standard-version --config .versionrc.json",
    "release:minor": "standard-version --release-as minor --config .versionrc.json",
    "release:major": "standard-version --release-as major --config .versionrc.json",
    "release:patch": "standard-version --release-as patch --config .versionrc.json",
    "audit": "npm install --package-lock-only && (bunx npm audit || true) && rm -f package-lock.json",
    "security:audit": "bun audit",
    "security:audit:ci": "bunx npm install --package-lock-only && bunx npm audit --audit-level=moderate; rm -f package-lock.json",
    "security:semgrep": "semgrep --config .semgrep.yml",
    "security:secrets": "gitleaks detect --source . --verbose"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.90.11",
    "@tanstack/react-router": "^1.139.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "immer": "^11.0.1",
    "lucide-react": "^0.555.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@biomejs/biome": "^2.3.8",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@playwright/test": "^1.48.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@tanstack/react-router-devtools": "^1.139.12",
    "@tanstack/router-plugin": "^1.139.12",
    "@tanstack/router-vite-plugin": "^1.139.12",
    "@tauri-apps/api": "^2.9.0",
    "@tauri-apps/cli": "^2.9.4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.22",
    "axe-core": "^4.11.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "standard-version": "^9.5.0",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vitest": "^4.0.14"
  }
}
