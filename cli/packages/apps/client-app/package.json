{
  "name": "client-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "packageManager": "bun@1.3.4",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "scripts": {
    "dev": "vite",
    "dev:web": "vite",
    "build": "tsc && vite build",
    "build:web": "tsc && vite build",
    "build:desktop": "tsc && vite build --mode desktop",
    "lint": "biome check . && node scripts/check-file-sizes.js",
    "lint:fix": "biome check --write .",
    "lint:fix:unsafe": "biome check --write --unsafe .",
    "format": "biome format --write .",
    "check:size": "node scripts/check-file-sizes.js",
    "preview": "vite preview",
    "preview:web": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:mobile": "playwright test --grep @mobile",
    "test:e2e:api": "playwright test --grep @api",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "prepare": "husky",
    "commit": "git-cz",
    "release": "standard-version --config .versionrc.json",
    "release:minor": "standard-version --release-as minor --config .versionrc.json",
    "release:major": "standard-version --release-as major --config .versionrc.json",
    "release:patch": "standard-version --release-as patch --config .versionrc.json",
    "audit": "npm install --package-lock-only && (bunx npm audit || true) && rm -f package-lock.json",
    "security:audit": "bun audit",
    "security:audit:ci": "bunx npm install --package-lock-only && bunx npm audit --audit-level=moderate; rm -f package-lock.json",
    "security:semgrep": "semgrep --config .semgrep.yml",
    "security:secrets": "gitleaks detect --source . --verbose"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8"
  },
  "devDependencies": {
    "@axe-core/react": "^4.11.0",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@playwright/test": "^1.57.0",
    "@tanstack/router-plugin": "^1.141.2",
    "@tanstack/router-vite-plugin": "^1.141.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@vitest/ui": "^4.0.15",
    "axe-core": "^4.11.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "glob": "^13.0.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "standard-version": "^9.5.0",
    "vitest": "^4.0.15"
  }
}
