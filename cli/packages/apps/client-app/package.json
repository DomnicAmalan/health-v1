{
  "name": "lazarus-life-hims",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "build:desktop": "tsc --noEmit && vite build --mode desktop && tauri build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "check:size": "node scripts/check-file-sizes.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:mobile": "playwright test --grep @mobile",
    "test:e2e:api": "playwright test --grep @api",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build"
  },
  "dependencies": {
    "@base-ui/react": "^1.0.0",
    "@lazarus-life/shared": "workspace:*",
    "@lazarus-life/ui-components": "workspace:*",
    "@tauri-apps/api": "^2.5.0"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.5.0",
    "@axe-core/react": "^4.11.0",
    "@playwright/test": "^1.57.0",
    "@tanstack/router-plugin": "^1.141.2",
    "@tanstack/router-vite-plugin": "^1.141.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@vitest/ui": "^4.0.15",
    "axe-core": "^4.11.0",
    "glob": "^13.0.0",
    "jsdom": "^27.3.0",
    "vitest": "^4.0.15"
  }
}
