# ============================================
# Client App - Environment Configuration Template
# ============================================
# INSTRUCTIONS FOR NEW DEVELOPERS:
# 1. Copy this file to .env:
#    cp .env.example .env
#
# 2. Update values if needed (these defaults work for local development)
#
# This file contains ONLY Vite-specific overrides for the client application.
# Shared configuration is in the root .env file.
#
# IMPORTANT: This app connects to the MAIN API SERVICE (port 8080)
# ============================================

# ============================================
# API Configuration
# ============================================
# Client app uses the MAIN API SERVICE for auth/users (NOT the Vault service!)
VITE_API_BASE_URL=http://localhost:8080/api
VITE_API_TIMEOUT=30000         # 30 seconds
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000      # 1 second

# YottaDB API for EHR data (patients, clinical, etc.)
VITE_YOTTADB_API_BASE_URL=http://localhost:9091

# Cube.js Analytics API
VITE_CUBE_API_URL=http://localhost:4000/cubejs-api/v1
VITE_CUBE_API_TOKEN=dev-token

# ============================================
# OIDC Configuration
# ============================================
VITE_OIDC_ISSUER=http://localhost:8080
VITE_OIDC_CLIENT_ID=client-app
# CRITICAL: Redirect URI must match the Vite dev server port
VITE_OIDC_REDIRECT_URI=http://localhost:5175

# ============================================
# Vite Dev Server Configuration
# ============================================
VITE_PORT=5175                 # Client app dev server port
VITE_HOST=localhost
VITE_STRICT_PORT=true          # Fail if port is already in use
VITE_OPEN=false                # Don't auto-open browser (set true for local dev outside Docker)

# ============================================
# Vite Build Configuration
# ============================================
VITE_BUILD_OUT_DIR=dist
VITE_SOURCEMAP=false           # Disable source maps for production
VITE_MINIFY=true               # Enable minification

# ============================================
# Optional Features (uncomment to enable)
# ============================================
# VITE_ENABLE_MFA=true
# VITE_ENABLE_PASSKEYS=true
# VITE_ENABLE_SSO=true

# ============================================
# Application Configuration
# ============================================
# VITE_APP_NAME=Health V1
# VITE_APP_VERSION=1.0.0
