# Client App Environment Variables
# Copy this file to .env and update with your values

# API Configuration
VITE_API_BASE_URL=http://localhost:4117
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# OIDC Configuration (Optional)
VITE_OIDC_ISSUER=http://localhost:4117
VITE_OIDC_CLIENT_ID=client-app
VITE_OIDC_REDIRECT_URI=http://localhost:4115

# Vite Dev Server Configuration
VITE_PORT=4115
VITE_HOST=localhost
VITE_STRICT_PORT=true
VITE_OPEN=true

# Vite Build Configuration
VITE_BUILD_OUT_DIR=dist
VITE_SOURCEMAP=false
VITE_MINIFY=true

# Optional Features
# VITE_ENABLE_MFA=true
# VITE_ENABLE_PASSKEYS=true
# VITE_ENABLE_SSO=true

# Application Configuration
# VITE_APP_NAME=Health V1
# VITE_APP_VERSION=1.0.0
