# Admin UI Environment Variables
# Copy this file to .env and update with your values

# API Configuration
VITE_API_BASE_URL=http://localhost:8080
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# OIDC Configuration (Optional)
VITE_OIDC_ISSUER=http://localhost:8080
VITE_OIDC_CLIENT_ID=admin-client
VITE_OIDC_REDIRECT_URI=http://localhost:5174

# Vite Dev Server Configuration
VITE_PORT=5174
VITE_HOST=localhost
VITE_STRICT_PORT=true
VITE_OPEN=false

# Vite Build Configuration
VITE_BUILD_OUT_DIR=dist
VITE_SOURCEMAP=false
VITE_MINIFY=true

# Optional Features
# VITE_ENABLE_MFA=true
# VITE_ENABLE_PASSKEYS=true
# VITE_ENABLE_SSO=true

# Tauri Configuration (for desktop builds)
# TAURI_DEBUG=true
